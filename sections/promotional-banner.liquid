{{ 'section-promotional-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #Banner-{{ section.id }}::after {
    opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
  }
{%- endstyle -%}

<div id="Banner-{{ section.id }}" class="banner">
  <img
    class="banner__media"
    src={{ section.settings.image.src | image_url}}
    alt=""
    height={{ section.settings.image.height }}
    width={{ section.settings.image.width }}>
  {% assign color_scheme = section.settings.color_scheme %}
  <div class="banner__content" style="color: {{ color_scheme.settings.text }}; background-color: {{ color_scheme.background }}">
    {% for block in section.blocks %}
      {% if block.type == "heading" %}
        <h1 style="color: {{ color_scheme.settings.text }};">{{ block.settings.heading }}</h1>
      {% endif %}
      {% if block.type == "text" %}
        <h1 style="color: {{ color_scheme.settings.text }};">{{ block.settings.text }}</h1>
      {% endif %}
      {% if block.type == "buttons" %}
        {% if block.settings.button_label_1 != "" %}
          <a>{{ block.settings.button_label_1 }}</a>
        {% endif %}
        {% if block.settings.button_label_2 != "" %}
          <a>{{ block.settings.button_label_2 }}</a>
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>
  <script>
    console.log(" {{ section.settings.color_scheme.settings.text }} ")
  </script>
</div>

